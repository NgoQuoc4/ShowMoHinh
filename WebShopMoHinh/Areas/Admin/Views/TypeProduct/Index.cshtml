@model IEnumerable<WebShopMoHinh.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Loại Sản Phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID Loại SP
        </th>
        <th>
            Loại SP
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lspID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lspName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.lspID }) |
                @Html.ActionLink("Details", "Details", new { id = item.lspID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.lspID })
            </td>
        </tr>
    }

</table>
