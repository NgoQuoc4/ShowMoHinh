@model IEnumerable<WebShopMoHinh.Models.Orderpro>


@{
    ViewBag.Title = "HistoryOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Lịch Sử Đơn Hàng</h2>

<table class="table">
    <tr>
        <th>
            ID Đơn Hàng
        </th>
        <th>
            Ngày Đặt Hàng
        </th>
        <th>
            ID Khách Hàng
        </th>
        <th>
            Tên Khách Hàng
        </th>
        <th>
            ID Nhân Viên
        </th>
        <th>
            Tên Nhân VIên
        </th>
        <th>
            Tình Trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khachHang.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nvID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Details", "Details2", new { id = item.OrderID }) |
            </td>
        </tr>
    }

</table>
