@model IEnumerable<WebShopMoHinh.Models.Orderpro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Đơn Hàng</h2>

<table class="table">
    <tr>
        <th>
            ID Đơn Hàng
        </th>
        <th>
            Ngày Đặt Hàng
        </th>
        <th>
            ID Khách Hàng
        </th>
        <th>
            ID Nhân Viên
        </th>
        <th>
            Tình Trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nvID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>
