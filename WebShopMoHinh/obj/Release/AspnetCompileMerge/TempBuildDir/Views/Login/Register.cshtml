@model WebShopMoHinh.Models.khachHang
@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/admin/css/sb-admin-2.min.css" rel="stylesheet"

</head>
<body class="bg-gradient-primary">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                                </div>
                                <div class="form-horizontal">
                                    <h4>Staff</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <form class="user">
                                        <div class="form-group row">

                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Tên Khách Hàng", @class = "form-control form-control-user" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { placeholder = "TaxCode", @class = "form-control form-control-user" } })
                                                @Html.ValidationMessageFor(model => model.TaxCode, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { placeholder = "SDT", @class = "form-control form-control-user" } })
                                                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { placeholder = "Địa Chỉ", @class = "form-control form-control-user" } })
                                                @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Email", @class = "form-control form-control-user" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { placeholder = "UserName", @class = "form-control form-control-user" } })
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { placeholder = "PassWord", @class = "form-control form-control-user",type ="password" } })
                                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="btn btn-primary btn-user btn-block">
                                            <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block" />
                                        </div>
                                        <hr>
                                    </form>
                                    <div class="text-center">
                                        <a class="small" href="~/Login/Index">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="~/Content/admin/vendor/jquery/jquery.min.js"></script>
        <script src="~/Content/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="~/Content/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="~/Content/admin/js/sb-admin-2.min.js"></script>
    }
</body>
</html>
